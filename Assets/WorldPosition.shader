Shader "Unlit/WorldPosition"
{
    Properties
    {
    }
    SubShader
    {
        Tags { "RenderType"="Opaque" }
        LOD 100

        Pass
        {
            CGPROGRAM

            #pragma vertex   vert
            #pragma fragment frag

            #include "UnityCG.cginc"

            struct appdata
            {
                float4 vertex : POSITION;
                float2 uv     : TEXCOORD0;
            };

            struct v2f
            {
                float4 vertex : SV_POSITION;
                float2 uv     : TEXCOORD0;
            };

            v2f vert (appdata v)
            {
                v2f o;
                o.vertex = UnityObjectToClipPos(v.vertex);
                o.uv     = v.uv;
                return o;
            }

            float4 frag (v2f i) : SV_Target
            {
                float3 worldPosition = unity_ObjectToWorld._m03_m13_m23;

                return float4(worldPosition.x, worldPosition.y, worldPosition.z, 1);
            }

            ENDCG
        }
    }
}
